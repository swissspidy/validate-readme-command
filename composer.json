{
    "name": "swissspidy/validate-readme-command",
    "type": "wp-cli-package",
    "description": "Validate WordPress plugin readme files",
    "homepage": "https://github.com/swissspidy/validate-readme-command",
    "license": "MIT",
    "authors": [
        {
            "name": "Pascal Birchler",
            "email": "swissspidy@chat.wordpress.org",
            "homepage": "https://pascalbirchler.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "michelf/php-markdown": "^2.0",
        "wp-cli/wp-cli": "^2.5"
    },
    "require-dev": {
        "wp-cli/wp-cli-tests": "^5.0.2"
    },
    "config": {
        "process-timeout": 7200,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        },
        "bundled": false,
        "commands": [
            "plugin validate-readme"
        ]
    },
    "autoload": {
        "psr-4": {
            "WP_CLI\\ValidateReadme\\": "src/"
        },
        "files": [
            "validate-readme-command.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "behat": "run-behat-tests",
        "behat-rerun": "rerun-behat-tests",
        "lint": "run-linter-tests",
        "phpcs": "run-phpcs-tests",
        "phpunit": "run-php-unit-tests",
        "prepare-tests": "install-package-tests",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit",
            "@behat"
        ]
    },
    "support": {
        "issues": "https://github.com/swissspidy/validate-readme-command/issues"
    }
}
